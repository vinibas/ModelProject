@model ProjetoSimples.Presentation.ViewModels.ContaViewModel.CadastrarUsuárioViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Novo Usuário"];
}

<div class="container-conteúdo-principal">

    <h4>@Localizer["Cadastrar novo usuário"]</h4>
    <hr>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="NovoUsuário">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label">@Localizer["Nome"]</label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Senha" class="control-label">@Localizer["Senha"]</label>
                    <input asp-for="Senha" class="form-control" />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@Localizer["Concluir"]" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
</div>

