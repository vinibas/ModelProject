@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/Home/Index.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/Home/Index.min.css" asp-append-version="true" />
    </environment>
}

<div class="container-conteúdo-principal">
    <div class="jumbotron" id="jumbotron-bemvindo">
        <h1>@Localizer["Bem-vindo ao ProjetoSimples!"]</h1>
        <p>
            @Localizer["Este projeto foi criado para servir como um projeto de demonstração. " +
         "Sinta-se à vontade para revisar o código, e se quiser pode entrar em contato comigo. Contatos no Rodapé!"]

        </p>
    </div>

    <div id="slideshow-index" class="carousel slide" data-ride="carousel">

        <ul class="carousel-indicators">
            <li data-target="#slideshow-index" data-slide-to="0" class="active"></li>
            <li data-target="#slideshow-index" data-slide-to="1"></li>
            <li data-target="#slideshow-index" data-slide-to="2"></li>
        </ul>

        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="img-fluid" src="http://placehold.it/1200x400/16a085/ffffff&text=ASP.NET Core MVC 2.0" alt="ASP.NET Core MVC 2.0">
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="http://placehold.it/1200x400/03c/ffffff&text=@Localizer["Autenticação com ASP.NET Identity"]" alt="@Localizer["Autenticação com ASP.NET Identity"]">
            </div>
            <div class="carousel-item">
                <img class="img-fluid" src="http://placehold.it/1200x400/f30/fff&text=@Localizer["Persistência com Entity Framework (Code First)"]" alt="@Localizer["Persistência com Entity Framework (Code First)"]">
            </div>
        </div>

        <a class="carousel-control-prev" href="#slideshow-index" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#slideshow-index" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>

    </div>

    <div class="row quadros">

        <div class="col-sm-6 quadro-características pl-sm-3 mb-3 mb-sm-0">
            <div class="bg-info">
                <h3>@Localizer["Tecnologias utilizadas"]</h3>
                    <ul>
                        <li>ASP.NET CORE MVC 2</li>
                        <li>C#</li>
                        <li>Identity</li>
                        <li>Entity Framework</li>
                        <li>Bootstrap</li>
                        <li>Sass</li>
                    </ul>
            </div>
        </div>

        <div class="col-sm-6 quadro-características pr-sm-3">
            <div class="bg-info">
                <h3>@Localizer["Funcionalidades"]</h3>
                <ul>
                    <li>@Localizer["Layout responsivo"]</li>
                    <li>@Localizer["Cadastro de usuários"]</li>
                    <li>@Localizer["Autenticação"]</li>
                    <li>@Localizer["Validação de campos"]</li>
                    <li>@Localizer["Internacionalização"]</li>
                </ul>
            </div>
        </div>
    </div>
</div>