@model Vini.ModelProject.Application.ViewModels.LoginViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{ViewData["Title"] = "Login";}

@section Styles {
    <environment include="Development">
        <link rel="stylesheet" href="~/css/Conta/Login.css" asp-append-version="true" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/Conta/Login.min.css" asp-append-version="true" />
    </environment>
}
<div class="container-conteúdo-principal">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <fieldset>
                <legend>Login</legend>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">@Localizer["Nome"]</label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Senha" class="control-label">@Localizer["Senha"]</label>
                        <input asp-for="Senha" class="form-control" />
                        <span asp-validation-for="Senha" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="@Localizer["Entrar"]" class="btn btn-default" />
                    </div>
                </form>
            </fieldset>
        </div>
    </div>
</div>